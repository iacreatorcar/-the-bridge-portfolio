<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Bridge | {name}</title>
    <style>
        :root { --accent: #38bdf8; --bg: #020617; --card: #0f172a; --card-hover: #1e293b; --gold: #fbbf24; --canva: #00c4cc; --text-main: #f1f5f9; --text-dim: #94a3b8; }
        body { background: var(--bg); color: var(--text-main); font-family: sans-serif; margin: 0; padding: 0; display: flex; flex-direction: column; align-items: center; }
        .container { max-width: 1200px; width: 92%; text-align: center; padding: 4rem 0; }
        h1 { font-size: 4rem; margin: 0; letter-spacing: -2px; font-weight: 800; }
        .nav-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; margin: 2.5rem 0; }
        .nav-card { background: var(--card); padding: 1rem; border-radius: 8px; text-decoration: none; color: white; border: 1px solid rgba(255,255,255,0.05); }
        .tab-bar { display: flex; justify-content: center; gap: 1rem; margin: 3rem 0; border-bottom: 1px solid #1e293b; }
        .tab-btn { background: none; border: none; color: var(--text-dim); cursor: pointer; padding: 1rem; font-weight: bold; text-transform: uppercase; }
        .tab-btn.active { color: var(--accent); border-bottom: 2px solid var(--accent); }
        .content-section { display: none; }
        .content-section.active { display: block; }
        .grid-layout { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem; text-align: left; }
        .info-card { background: var(--card); padding: 2rem; border-radius: 12px; border-left: 4px solid var(--accent); text-decoration: none; color: inherit; transition: 0.3s; }
        .info-card:hover { transform: translateY(-5px); background: var(--card-hover); }
        .border-gold { border-left-color: var(--gold); }
        .border-canva { border-left-color: var(--canva); }
        .lang-switcher { position: fixed; top: 20px; right: 20px; z-index: 100; }
        .lang-switcher button { background: #1e293b; color: white; border: none; padding: 5px 10px; cursor: pointer; border-radius: 4px; }
        .badge-year { font-size: 0.7rem; padding: 2px 8px; border: 1px solid var(--accent); border-radius: 4px; color: var(--accent); }
    </style>
</head>
<body>
    <div class="lang-switcher">
        <button onclick="setLanguage('it')" id="btn-it">IT</button>
        <button onclick="setLanguage('en')" id="btn-en">EN</button>
    </div>

    <div class="container">
        <div style="color: var(--accent); font-weight: 800; letter-spacing: 3px;">TECHNICAL ARCHITECTURE</div>
        <h1>THE BRIDGE</h1>
        <p style="font-size: 1.2rem; color: var(--text-dim);">Digital Experience Lead | Tech Operations Manager</p>

        <div class="nav-grid">
            {quickLinks.map(link => (
                <a href={link.url} target="_blank" class="nav-card">
                    <span style="font-size: 1.5rem;">{link.icon}</span>
                    <div style="font-size: 0.8rem; font-weight: bold; margin-top: 5px;">{link.name}</div>
                </a>
            ))}
        </div>

        <div class="tab-bar">
            <button class="tab-btn active" onclick="showTab('tech')" id="tab-tech">Modules</button>
            <button class="tab-btn" onclick="showTab('lab')" id="tab-lab">Lab</button>
            <button class="tab-btn" onclick="showTab('certs')" id="tab-certs">Certifications</button>
        </div>

        <div id="section-tech" class="content-section active">
            <div class="grid-layout">
                {dashboardModules.map(mod => (
                    <div class="info-card">
                        <h3>{mod.icon} {mod.title}</h3>
                        <p class="lang-text" data-it={mod.description_it} data-en={mod.description_en}>{mod.description_it}</p>
                    </div>
                ))}
            </div>
        </div>

        <div id="section-lab" class="content-section">
            <div class="grid-layout">
                {labProjects.map(proj => (
                    <a href={proj.url} target="_blank" class="info-card border-canva">
                        <h4>{proj.title}</h4>
                        <p class="lang-text" data-it={proj.it} data-en={proj.en}>{proj.it}</p>
                    </a>
                ))}
            </div>
        </div>

        <div id="section-certs" class="content-section">
            <div class="grid-layout">
                {certifications.map(cert => (
                    <div class="info-card border-gold">
                        <span class="badge-year">{cert.date}</span>
                        <h4>{cert.title}</h4>
                        <p>{cert.issuer}</p>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <script is:inline>
        function showTab(tabName) {
            document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.getElementById('section-' + tabName).classList.add('active');
            document.getElementById('tab-' + tabName).classList.add('active');
        }
        function setLanguage(lang) {
            document.querySelectorAll('.lang-text').forEach(el => {
                el.innerText = el.getAttribute('data-' + lang);
            });
        }
    </script>
</body>
</html>