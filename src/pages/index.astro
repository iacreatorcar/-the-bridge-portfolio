    </div>
</div>

<script>
    // Filtri Categorie
    const filterBtns = document.querySelectorAll('.tab-btn');
    const items = document.querySelectorAll('.filter-item');
    const title = document.getElementById('dynamic-title');
    const accentText = document.querySelector('.accent');
    const headerBorder = document.getElementById('main-header');

    filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const filter = btn.getAttribute('data-filter');
            filterBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            let color, label;
            if (filter === 'smart') { color = "#f59e0b"; label = "SMART SYSTEMS"; }
            else if (filter === 'frontend') { color = "#38bdf8"; label = "UX / FRONT-END"; }
            else if (filter === 'backend') { color = "#a855f7"; label = "THE ENGINE (BACK-END)"; }
            else if (filter === 'marketing') { color = "#10b981"; label = "MARKETING & CLARITY"; }

            if(title) {
                title.innerText = label;
                title.style.color = title.style.borderColor = color;
            }
            if(accentText) accentText.style.color = color;
            if(headerBorder) headerBorder.style.borderColor = color;

            items.forEach(item => {
                item.classList.toggle('hidden', !item.classList.contains(filter));
            });
        });
    });

    // Switcher Lingua
    const langBtns = document.querySelectorAll('.lang-btn');
    langBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const lang = btn.getAttribute('data-lang');
            langBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            document.querySelectorAll('.lang-content').forEach(c => {
                c.classList.toggle('hidden', !c.classList.contains(lang));
            });
        });
    });
</script>

