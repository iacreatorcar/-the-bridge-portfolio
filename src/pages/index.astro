<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>The Bridge | {name}</title>
    <style>
        :root { --accent: #38bdf8; --bg: #020617; --card: #1e293b; --gold: #fbbf24; }
        body { background: var(--bg); color: #f1f5f9; font-family: 'Inter', sans-serif; margin: 0; padding: 0; display: flex; flex-direction: column; align-items: center; }
        .container { max-width: 1000px; width: 90%; text-align: center; padding: 4rem 0; }
        
        /* Navigation Tabs */
        .tab-bar { display: flex; justify-content: center; gap: 1rem; margin: 3rem 0; border-bottom: 1px solid #1e293b; padding-bottom: 1rem; }
        .tab-btn { background: none; border: none; color: #94a3b8; font-size: 1.1rem; font-weight: bold; cursor: pointer; padding: 0.5rem 1.5rem; transition: 0.3s; position: relative; }
        .tab-btn.active { color: var(--accent); }
        .tab-btn.active::after { content: ''; position: absolute; bottom: -1rem; left: 0; width: 100%; height: 2px; background: var(--accent); }

        .content-section { display: none; animation: fadeIn 0.5s ease-in-out; }
        .content-section.active { display: block; }

        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        .grid-layout { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1rem; text-align: left; }
        .info-card { background: #0f172a; border: 1px solid #1e293b; padding: 1.2rem; border-radius: 0.75rem; transition: 0.3s; text-decoration: none; color: inherit; display: block; }
        .info-card:hover { border-color: var(--accent); background: #1e293b; }

        .lang-switcher { position: fixed; top: 20px; right: 20px; z-index: 100; }
        .lang-switcher button { background: #1e293b; border: 1px solid var(--accent); color: white; padding: 5px 12px; border-radius: 15px; cursor: pointer; font-size: 0.7rem; }
        .lang-switcher button.active { background: var(--accent); color: var(--bg); }

        .nav-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; margin-bottom: 2rem; }
        .nav-card { background: var(--card); padding: 1rem; border-radius: 0.5rem; text-decoration: none; color: white; border: 1px solid rgba(56, 189, 248, 0.2); }
        
        h1 { font-size: 3.5rem; margin: 0; letter-spacing: -2px; }
        .badge { font-size: 0.65rem; padding: 2px 6px; border-radius: 4px; background: rgba(56, 189, 248, 0.1); color: var(--accent); border: 1px solid var(--accent); }
    </style>
</head>
<body>
    <div class="lang-switcher">
        <button onclick="setLanguage('it')" id="btn-it" class="active">IT</button>
        <button onclick="setLanguage('en')" id="btn-en">EN</button>
    </div>

    <div class="container">
        <div style="letter-spacing: 4px; font-size: 0.8rem; opacity: 0.6; color: var(--accent);">{name} PRESENTS</div>
        <h1>THE BRIDGE</h1>
        <p style="opacity: 0.7; font-weight: 300; margin-top: 0.5rem;">Tech Operations Manager | Digital Solutions Architect</p>

        <div class="nav-grid" style="margin-top: 2.5rem;">
            {quickLinks.map(link => (
                <a href={link.url} target="_blank" class="nav-card">
                    <span style="display:block; font-size: 1.5rem;">{link.icon}</span>
                    <small style="font-size: 0.7rem; font-weight: bold;">{link.name}</small>
                </a>
            ))}
        </div>

        <div class="tab-bar">
            <button class="tab-btn active" onclick="showTab('certs')" id="tab-certs">PATH & SKILLS</button>
            <button class="tab-btn" onclick="showTab('media')" id="tab-media">CREATIVE MEDIA</button>
        </div>

        <div id="section-certs" class="content-section active">
            <div class="grid-layout">
                {certifications.map(cert => (
                    <div class="info-card">
                        <div style="display:flex; justify-content: space-between;">
                            <span class="badge" style="border-color: var(--gold); color: var(--gold);">{cert.date}</span>
                            {cert.url && <a href={cert.url} target="_blank" style="text-decoration:none;">üîó</a>}
                        </div>
                        <h4 style="margin: 0.8rem 0 0.2rem 0; color: #fff;">{cert.title}</h4>
                        <small style="color: var(--accent);">{cert.issuer}</small>
                        <p class="lang-text" data-it={cert.it} data-en={cert.en} style="font-size: 0.8rem; opacity: 0.6; margin-top: 0.5rem;">{cert.it}</p>
                    </div>
                ))}
            </div>
        </div>

        <div id="section-media" class="content-section">
            <div class="grid-layout">
                {cityTours.map(tour => (
                    <a href={tour.url} target="_blank" class="info-card">
                        <div style="display:flex; justify-content: space-between;">
                            <span class="badge">{tour.category}</span>
                            <span>üìπ</span>
                        </div>
                        <h4 style="margin: 0.8rem 0 0.2rem 0; color: #fff;">{tour.title}</h4>
                        <p class="lang-text" data-it={tour.it} data-en={tour.en} style="font-size: 0.8rem; opacity: 0.6;">{tour.it}</p>
                    </a>
                ))}
            </div>
        </div>

        <div class="bio" style="margin-top: 5rem;">
            <p id="bio-text" data-it=' "20 anni di logistica navale incontrano lo sviluppo software moderno." ' data-en=' "20 years of maritime logistics meet modern software development." '>
                "20 anni di logistica navale incontrano lo sviluppo software moderno."
            </p>
        </div>

        <div style="margin-top: 3rem; opacity: 0.4; font-size: 0.8rem; border-top: 1px solid #1e293b; padding-top: 2rem;">
            {name} | Digital Experience Lead @ Aroya Cruises | Former Technical Manager @ MSC
        </div>
    </div>

    <script is:inline>
        function showTab(tabName) {
            // Gestione visibilit√† sezioni
            document.getElementById('section-certs').classList.remove('active');
            document.getElementById('section-media').classList.remove('active');
            document.getElementById('section-' + tabName).classList.add('active');

            // Gestione stile pulsanti
            document.getElementById('tab-certs').classList.remove('active');
            document.getElementById('tab-media').classList.remove('active');
            document.getElementById('tab-' + tabName).classList.add('active');
        }

        function setLanguage(lang) {
            document.getElementById('btn-it').classList.toggle('active', lang === 'it');
            document.getElementById('btn-en').classList.toggle('active', lang === 'en');
            
            const bio = document.getElementById('bio-text');
            bio.innerHTML = bio.getAttribute('data-' + lang);

            document.querySelectorAll('.lang-text').forEach(el => {
                el.innerText = el.getAttribute('data-' + lang);
            });
        }
    </script>
</body>
</html>