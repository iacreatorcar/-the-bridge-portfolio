<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>The Bridge | {name}</title>
    <style>
        :root { --accent: #38bdf8; --bg: #020617; --card: #1e293b; --gold: #fbbf24; }
        body { background: var(--bg); color: #f1f5f9; font-family: sans-serif; display: flex; justify-content: center; align-items: center; min-height: 100vh; margin: 0; padding: 2rem 0; }
        .container { max-width: 900px; width: 90%; text-align: center; position: relative; }
        
        .lang-switcher { position: fixed; top: 20px; right: 20px; display: flex; gap: 10px; z-index: 100; }
        .lang-switcher button { 
            background: #1e293b; border: 1px solid var(--accent); color: white; 
            padding: 8px 15px; border-radius: 20px; cursor: pointer; transition: 0.3s; font-size: 0.8rem;
        }
        .lang-switcher button.active { background: var(--accent); color: var(--bg); font-weight: bold; }

        .nav-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem; margin-top: 2rem; }
        .nav-card { background: var(--card); padding: 2rem; border-radius: 1rem; border: 1px solid rgba(56, 189, 248, 0.3); text-decoration: none; color: white; transition: 0.3s; display: block; }
        .nav-card:hover { transform: translateY(-5px); border-color: var(--accent); box-shadow: 0 10px 20px rgba(0,0,0,0.3); }
        
        .section-header { margin-top: 4rem; text-align: left; }
        .grid-layout { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem; margin-top: 1.5rem; }
        .info-card { background: #0f172a; border-left: 4px solid var(--accent); padding: 1.5rem; border-radius: 0.5rem; text-decoration: none; color: white; transition: 0.2s; display: block; text-align: left; }
        .info-card:hover { background: #1e293b; transform: scale(1.02); }
        
        .bio { opacity: 0.8; margin-top: 3rem; font-style: italic; line-height: 1.6; }
        h1 { font-size: clamp(2.5rem, 8vw, 4rem); margin-bottom: 0; letter-spacing: -1px; }
        .badge { font-size: 0.7rem; text-transform: uppercase; color: var(--accent); letter-spacing: 2px; background: rgba(56, 189, 248, 0.1); padding: 4px 8px; border-radius: 4px; }
    </style>
</head>
<body>
    <div class="lang-switcher">
        <button onclick="setLanguage('it')" id="btn-it" class="active">IT üáÆüáπ</button>
        <button onclick="setLanguage('en')" id="btn-en">EN üá¨üáß</button>
    </div>

    <div class="container">
        <div style="margin-bottom: 0.5rem; letter-spacing: 3px; font-size: 0.9rem; opacity: 0.7; color: var(--accent); text-transform: uppercase;">
            {name} Presents
        </div>

        <h1>THE BRIDGE</h1>
        
        <p id="headline" style="color: var(--accent); font-weight: bold; font-size: 1.2rem;">
            Technical Operations Manager | Digital Solutions Architect
        </p>
        
        <div class="nav-grid">
            {quickLinks.map(link => (
                <a href={link.url} target="_blank" class="nav-card">
                    <div style="font-size: 2.5rem; margin-bottom: 0.5rem;">{link.icon}</div>
                    <strong>{link.name}</strong>
                </a>
            ))}
        </div>

        <div class="section-header">
            <h2 id="cert-title" style="font-size: 1.8rem; border-bottom: 2px solid var(--gold); padding-bottom: 0.8rem; margin-bottom: 2rem;">
                üìú Certificazioni Professionali
            </h2>
            <div class="grid-layout">
                {certifications.map(cert => (
                    <div class="info-card" style="border-left-color: var(--gold);">
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <span class="badge" style="color: var(--gold); border: 1px solid var(--gold); background: none;">{cert.date}</span>
                            {cert.url && <a href={cert.url} target="_blank" style="text-decoration:none; font-size: 1.2rem;">üîó</a>}
                        </div>
                        <h3 style="margin: 0.8rem 0 0.3rem 0; font-size: 1.1rem; color: #fff;">{cert.title}</h3>
                        <p style="font-size: 0.8rem; color: var(--gold); margin-bottom: 0.8rem; font-weight: bold;">{cert.issuer}</p>
                        <p class="lang-text" data-it={cert.it} data-en={cert.en} style="font-size: 0.85rem; color: #94a3b8; line-height: 1.4;">
                            {cert.it}
                        </p>
                    </div>
                ))}
            </div>
        </div>

        <div class="section-header">
            <h2 id="video-title" style="font-size: 1.8rem; border-bottom: 2px solid var(--accent); padding-bottom: 0.8rem; margin-bottom: 2rem;">
                üåç City Tours Globali & Drone Media
            </h2>
            <div class="grid-layout">
                {cityTours.map(tour => (
                    <a href={tour.url} target="_blank" class="info-card">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                            <span class="badge">{tour.category}</span>
                            <span style="font-size: 1.2rem;">üìπ</span>
                        </div>
                        <h3 style="margin: 0 0 1rem 0; font-size: 1.3rem; color: #fff;">{tour.title}</h3>
                        <p class="lang-text" data-it={tour.it} data-en={tour.en} style="font-size: 0.9rem; color: #94a3b8; margin: 0; line-height: 1.4;">
                            {tour.it}
                        </p>
                    </a>
                ))}
            </div>
        </div>

        <div class="bio">
            <p id="bio-text" 
               data-it=' "Unire 20 anni di logistica navale con lo sviluppo software moderno. <br> Knowledge: Otallo, Sanity CMS, Stripe, SourceToAD." '
               data-en=' "Merging 20 years of maritime logistics with modern software development. <br> Knowledge: Otallo, Sanity CMS, Stripe, SourceToAD." '>
                "Unire 20 anni di logistica navale con lo sviluppo software moderno. <br>
                Knowledge: <strong>Otallo, Sanity CMS, Stripe, SourceToAD</strong>."
            </p>
        </div>
        
        <div style="margin-top: 4rem; padding-top: 2rem; border-top: 1px solid #1e293b; opacity: 0.9;">
            <div style="font-weight: bold; font-size: 1.1rem; color: #fff; margin-bottom: 0.3rem;">
                {name}
            </div>
            <div style="font-size: 0.85rem; opacity: 0.6;">
                Digital Experience Lead @ Aroya Cruises | Former Technical Manager @ MSC
            </div>
        </div>
    </div>

    <script is:inline>
        function setLanguage(lang) {
            document.getElementById('btn-it').classList.toggle('active', lang === 'it');
            document.getElementById('btn-en').classList.toggle('active', lang === 'en');

            const videoTitle = document.getElementById('video-title');
            videoTitle.innerText = lang === 'it' ? "üåç City Tours Globali & Drone Media" : "üåç Global City Tours & Drone Media";

            const certTitle = document.getElementById('cert-title');
            certTitle.innerText = lang === 'it' ? "üìú Certificazioni Professionali" : "üìú Professional Certifications";

            const bio = document.getElementById('bio-text');
            bio.innerHTML = bio.getAttribute('data-' + lang);

            document.querySelectorAll('.lang-text').forEach(el => {
                el.innerText = el.getAttribute('data-' + lang);
            });
        }
    </script>
</body>
</html>